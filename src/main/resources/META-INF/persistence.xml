<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="crm-persistence-unit">
    <class>com.projects.crm.models.Admin.java</class>
    <class>com.projects.crm.models.Post.java</class>
    <properties>
        <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
        <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql:crm"/>
        <property name="jakarta.persistence.jdbc.user" value="core"/>
        <property name="jakarta.persistence.jdbc.password" value="12345678"/>
    </properties>
    </persistence-unit>
</persistence>
