<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
         version="2.0">
<persistence-unit name="crm" transaction-type="RESOURCE_LOCAL" >
    <properties>
        <property name = "hibernate.connection.url">jdbc:postgresql:crm</property>
        <property name = "hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name = "hibernate.connection.user">core</property>
        <property name = "hibernate.connection.password">12345678</property>
    </properties>
    <exclude-unlisted-classes>true</exclude-unlisted-classes> 
    <class>com.projects.crm.models.entities.Admin.class</class>
    <class>com.projects.crm.models.entities.Post.class</class>
  
  </persistence-unit>
</persistence>